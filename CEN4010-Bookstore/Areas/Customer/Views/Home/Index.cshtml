@model IEnumerable<Book>

    <div class="row pb-3">
    @foreach(var book in Model)
    {
        <div class="col-lg-3" "col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded"> 
                        <img src="@book.ImgID" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@book.Title</p>
                            <p class="card-title text-warning text-center">by <b>@book.Author.FirstName @book.Author.LastName</b></p>
                        </div>
                        <div class-"pl-1">
                            <p class="text-dark text-opacity-75 text-center">MSRP: <span>@book.MSRP.ToString("c")</span></p>
                        </div>
                        <a asp-action="Details"
                        asp-route-bookId="@book.Id"
                        class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>