@model List<Publisher>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Publisher List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Publisher" asp-action="Create" class="btn btn-primary">
                Create New Publisher
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thread>
            <tr>
                <th>
                    Publisher Name
                </th>
                <th>
                    Country
                </th>
                <th>
                    Website
                </th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Name))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Country</td>
                    <td>@obj.website</td>
                    <td>
                        <div class="w-75" btn-group role="group">
                            <a asp-controller="Publisher" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Publisher" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>


            }

        </tbody>



    </table>

</div>