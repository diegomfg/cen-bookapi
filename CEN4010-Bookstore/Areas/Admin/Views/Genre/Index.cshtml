@model List<Genre> 
<partial name="_Notification"/>
    <div class="container">
        <div class="row pt-4 pb-3"> 
            <div class="col-6">
                <h2 class="text-primary">
                    Genre List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Genre" asp-action="Create" class="btn btn-primary">
                Create New Genre
                </a>
            </div>
        </div>


<table class="table table-bordered table-striped">
    <thread>
        <tr>
            <th>
                Genre Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Update Controls
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75" btn-group role="group">
                            <a asp-controller="Genre" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Genre" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>


        }

    </tbody>
    


</table>

</div>